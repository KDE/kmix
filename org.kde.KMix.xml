<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
"http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
  <interface name="org.kde.KMix">
    <method name="setVolume">
      <arg name="deviceidx" type="s" direction="in"/>
      <arg name="percentage" type="i" direction="in"/>
    </method>
    <method name="setMasterVolume">
      <arg name="percentage" type="i" direction="in"/>
    </method>
    <method name="increaseVolume">
      <arg name="deviceidx" type="s" direction="in"/>
	</method>
    <method name="decreaseVolume">
      <arg name="deviceidx" type="s" direction="in"/>
    </method>
    <method name="volume">
      <arg name="deviceidx" type="s" direction="in"/>
      <arg type="i" direction="out"/>
    </method>
    <method name="masterVolume">
      <arg type="i" direction="out"/>
    </method>
    <method name="masterDeviceIndex">
      <arg type="s" direction="out"/>
    </method>
    <method name="setAbsoluteVolume">
      <arg name="deviceidx" type="s" direction="in"/>
      <arg name="absoluteVolume" type="x" direction="in"/>
    </method>
    <method name="absoluteVolume">
      <arg type="x" direction="out"/>
      <arg name="deviceidx" type="s" direction="in"/>
    </method>
    <method name="absoluteVolumeMin">
      <arg type="x" direction="out"/>
      <arg name="deviceidx" type="s" direction="in"/>
    </method>
    <method name="absoluteVolumeMax">
      <arg type="x" direction="out"/>
      <arg name="deviceidx" type="s" direction="in"/>
    </method>
    <method name="setMute">
      <arg name="deviceidx" type="s" direction="in"/>
      <arg name="on" type="b" direction="in"/>
    </method>
    <method name="toggleMute">
      <arg name="deviceidx" type="s" direction="in"/>
    </method>
    <method name="mute">
      <arg name="deviceidx" type="s" direction="in"/>
      <arg type="b" direction="out"/>
    </method>
    <method name="setRecordSource">
      <arg name="deviceidx" type="s" direction="in"/>
      <arg name="on" type="b" direction="in"/>
    </method>
    <method name="isRecordSource">
      <arg name="deviceidx" type="s" direction="in"/>
      <arg type="b" direction="out"/>
    </method>
    <method name="isAvailableDevice">
      <arg name="deviceidx" type="s" direction="in"/>
      <arg type="b" direction="out"/>
    </method>
  </interface>
</node>
